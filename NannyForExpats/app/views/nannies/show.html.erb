
<div class="row" style="border:1px solid black">
	<div class="one-third column" style="border:1px solid black">
		<%= image_tag "default.png" %>
		<div class="row profile_name">
			<h4><%= @nanny.name %></h4>
		</div>	
	</div>

	<div class="two-thirds column profile_pic">
		<div class="row profile_headline">
			<h5><%= @nanny.headline %></h5>
		</div>

		<div class="row profile_line1">
			<div class="one-third column profile_line2">
				Age: <div class="output_styling"><%= @nanny.age %></div>	
			</div>
			<div class="one-third column profile_line2">
				Nationality: <div class="output_styling"> <%= @nanny.nationality %> </div>
			</div>
			<div class="one-third column profile_line2">
				Languages: <div class="output_styling"><%= @nanny.language %></div>
			</div>
		</div>
		<br />
		<div class="row profile_line3">
			Degree: <div class="output_styling"><%= @nanny.degree %></div>
		</div>
		<div class="row profile_line4">
			Education: <div class="output_styling"><%= @nanny.education %></div>
		</div>
	</div>

	<div class="row">
		<div class="one-third column profile_line5">
			Certifications: <%= @nanny.conditions %>
		</div>
		<div class="two columns profile_line5">
			First Aid: <%= human_boolean(@nanny.first_aid) %>
		</div>
		<div class="two columns profile_line5">
			License: <%= @nanny.license %>
		</div>
		<div class="two columns profile_line5">
			Car: <%= human_boolean(@nanny.vehicle) %>
		</div>
		<div class="two columns profile_line5">
			Permit:
			<div class="output_styling"> <%= human_boolean(@nanny.permit) %>
			</div>
		</div>
	</div>
</div>

